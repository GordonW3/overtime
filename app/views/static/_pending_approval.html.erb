<% pending_approvals.each do |pending_approvals| %>
		<div class="hompage-block col-md-3">
			<h3>
				<%= pending_approvals.user.full_name %>
			</h3>

			<p>
				<span class="pending-details">Date Submitted:</span> <%= pending_approvals.date %>
			</p>

			<p>
				<span class="pending-details">Rationale:</span> <%= truncate pending_approvals.rationale, length: 42 %>
			</p>

			<div class="row">
				<div class="col-md-6"> 
				<%= link_to 'Approve', root_path, class: "btn btn-success btn-block" %>
				</div>
				<div class="col-md-6"> 
				<%= link_to 'review', root_path, class: "btn btn-warning btn-block" %>
				</div>

			</div>
		</div>
<% end %>